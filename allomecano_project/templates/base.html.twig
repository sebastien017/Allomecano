<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta http-equiv="X-UA-Compatible" content="ie=edge">
	    <title>{% block title %}Allomecano{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
        <link rel="stylesheet" href="{{ asset('assets/css/css.css') }}">
        {% endblock %}
    </head>
    <body>
    	<header>
		<nav class="navbar" role="navigation" aria-label="main navigation">
			<div class="navbar-brand">
				<a href="{{ path('home') }}" class="navbar-item" href="https://bulma.io">
					<img src="{{ asset('assets/img/logo.jpg') }}" width="106" height="52">Allomecano
        </a>
          <span class="navbar-burger burger" data-target="navbarMenuHeroB">
              <span></span>
              <span></span>
              <span></span>
          </span>
			</div>
            {% if not app.user %}
			<div id="navbarMenuHeroB" class="navbar-menu">
				<div class="navbar-end">
					<div class="navbar-item">
						<div class="buttons">
							<a href="{{ path('signup') }}" class="button is-primary"> 
                <strong><i class="fas fa-user-circle mr-1"></i>S'enregistrer</strong>
              </a> 
              <a href="{{ path('app_login') }}" class="button is-light">
                <i class="fas fa-sign-in-alt mr-1"></i>Se connecter
              </a>
						</div>
					</div>
				</div>
			</div>
        {% endif %}
        {% if app.user %}
            <div id="navbarMenuHeroB" class="navbar-menu">
				<div class="navbar-end">
					<div class="navbar-item">
						<div class="buttons">
							<a href="{{ path('profile', {'id': app.user.id }) }}" class="button is-primary"> 
                <strong><i class="fas fa-user-circle mr-1"></i>Mon compte</strong>
              </a> 
              <a href="{{ path('logout') }}" class="button is-light">
                <i class="fas fa-sign-in-alt mr-1"></i>Déconnexion
              </a>
						</div>
					</div>
				</div>
			</div>
        {% endif %}
		</nav>
	</header>
        {% block body %}{% endblock %}
        {% block footer %}
        <div class="columns is-multiline is-mobile has-text-centered footer is-12">
			<div class="column is-12"><img src="{{ asset('assets/img/footer-logo.png') }}">
            </div>
            <div class="column is-mobile is-12">
                <div class="columns is-mobile is-centered is-multiline">
                <a href="{{ path('aboutUs') }}"><div class="column">A propos de nous</div></a>
                <a href="{{ path('faq') }}"><div class="column">FAQ</div></a>
                <a href="{{ path('contact') }}"><div class="column">Contact</div></a>
                <a href="{{ path('legalMentions') }}"><div class="column">Mentions légales</div></a>
                </div>
            </div>
		</div>
        </section>
        {% endblock %}
        {% block javascripts %}
        <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
	      <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
        <script defer src="{{ asset('assets/js/menu.js') }}"></script>
        <script src="{{ asset('assets/js/placeGmap.js') }}"></script>
        <script src="https://maps.googleapis.com/maps/api/js?&language=fr&key=AIzaSyAa_XzBtUTRBtVf2yBNiqYhT1bvBJX_Xoo&libraries=places&callback=initAutocomplete" async defer></script>
        <script src="https://cdn.jsdelivr.net/npm/bulma-steps@2.2.1/dist/js/bulma-steps.js"></script> 
        <script src="{{ asset('assets/js/formGarage.js') }}"></script>
        {% endblock %}
    </body>
</html>
