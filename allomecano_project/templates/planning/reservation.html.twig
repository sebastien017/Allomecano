    </div>
</div>
{% endfor %}

{% if not app.user %}
	<div class="buttons is-vcentered">
		<a href="{{ path('app_login') }}" class="button is-light"> 
            <strong><i class="fas fa-sign-in-alt mr-1"></i>Se connecter pour confirmer mon rdv</strong>
        </a> 
	</div>
{% endif %}
{% if app.user %}
    <div class="buttons is-vcentered">
        <a href="{{ path('reservation_confirm', {id: garage.id }) }}" class="button is-primary">
            <i class="fas fa-check mr-1"></i>Finaliser ma prise de rdv
        </a>
	</div>
{% endif %}

